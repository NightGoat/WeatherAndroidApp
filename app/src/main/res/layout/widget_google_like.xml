<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextClock
        android:id="@+id/oneLineWidget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="EEE, MMM dd"
        android:format24Hour="EEE, dd MMM "
        style="@style/OneLineWidgetText"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/oneLineWidget_line"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/size_1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_4dp"
        android:paddingBottom="@dimen/size_4dp"
        android:background="@android:color/white"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/oneLineWidget_icon"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_16dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/icon"
        />

    <TextView
        android:id="@+id/oneLineWidget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        tools:text="32&#8451;"
        style="@style/OneLineWidgetText"
        android:textColor="@android:color/white"/>

</LinearLayout>